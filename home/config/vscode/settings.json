{
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "editor.minimap.enabled": false,
    "explorer.confirmDelete": false,
    "editor.fontFamily": "'Monaspace Neon'",
    "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09'",
    "editor.fontSize": 16,
    "editor.fontWeight": 300,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.fontFamily": "'Monaspace Neon'",
    "terminal.integrated.fontWeight": 300,
    "terminal.integrated.smoothScrolling": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "window.menuBarVisibility": "hidden",
    "workbench.sideBar.location": "right",
    "rust-analyzer.diagnostics.experimental.enable": true,
    "rust-analyzer.diagnostics.previewRustcOutput": true,
    "rust-analyzer.diagnostics.styleLints.enable": true,
    "rust-analyzer.check.command": "clippy",
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "rust-analyzer.cargo.targetDir": true,
    "terminal.integrated.defaultProfile.linux": "fish",
    "github.copilot.enable": {
        "*": false
    },
    "workbench.editor.empty.hint": "hidden",
    "rust-analyzer.showSyntaxTree": true,
    "rust-analyzer.hover.actions.run.enable": false,
    "rust-analyzer.hover.actions.debug.enable": false,
    "rust-analyzer.cargo.target": "x86_64-unknown-linux-gnu",
    "editor.cursorBlinking": "solid",
    "editor.formatOnSave": true,
    "terminal.integrated.scrollback": 10000000,
    "keyboard.dispatch": "keyCode",
    "diffEditor.ignoreTrimWhitespace": false,
    "git.ignoreRebaseWarning": true,
    "github.copilot.renameSuggestions.triggerAutomatically": false,
    "github.copilot.nextEditSuggestions.fixes": false,
    "github.copilot.editor.enableCodeActions": false,
    "redhat.telemetry.enabled": false,
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "nix.enableLanguageServer": true,
    "nix.formatterPath": "nixfmt",
    "chat.agent.maxRequests": 60,
    "chat.checkpoints.showFileChanges": true,
    "chat.fontSize": 16,
    "chat.mcp.access": "none",
    "chat.tools.terminal.autoApprove": {
        "go": true,
        "gofmt": true,
        "mv": true,
        "cargo test": true,
        "pdm": true
    },
    "github.copilot.chat.codeGeneration.useInstructionFiles": false,
    "github.copilot.chat.customInstructionsInSystemMessage": false,
    "extensions.autoCheckUpdates": false,
    "update.mode": "none",
    "explorer.confirmPasteNative": false,
    "python.analysis.typeCheckingMode": "basic",
    "files.associations": {
        "justfile": "makefile"
    },
    "extensions.ignoreRecommendations": true,
    "claudeCode.preferredLocation": "sidebar",
    "remote.SSH.showLoginTerminal": true,
    "remote.SSH.useLocalServer": false,
    "remote.SSH.remotePlatform": {
        "psi.local": "linux",
        "psi": "linux"
    },
    "remote.SSH.useExecServer": false
}